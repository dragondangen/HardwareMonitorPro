<Window x:Class="HardwareMonitorPro.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OverlayWindow"
        Width="200" Height="120"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

	<Border CornerRadius="10" Background="#55000000" Padding="10">
		<StackPanel>
			<TextBlock Text="{Binding CompactCpuText}" Foreground="White" FontWeight="Bold"/>
			<TextBlock Text="{Binding CompactGpuText}" Foreground="White" Margin="0,5,0,0"/>
			<TextBlock Text="{Binding CompactRamText}" Foreground="White" Margin="0,5,0,0"/>
		</StackPanel>
	</Border>
</Window>